<aiml version="1.0.1" encoding="UTF-8">

<category>
    <pattern>
        MAZE
    </pattern>
    <template>
        <!-- starting room -->
        <think><set name="topic">ROOM01</set></think>

        <!-- one think block for every room -->
        <think><set name="seen01">unseen</set></think>
        <think><set name="seen02">unseen</set></think>

        <srai> INTERNALLOOK <get name="topic" /></srai>
    </template>

</category>



<!-- ROOM01 -->

<!-- direction statements here -->
    <category>
        <pattern>
            GO EAST
        </pattern>
        <template>
            <think><set name="topic">ROOM02</set></think>
            <srai> INTERNALLOOK <get name="topic" /></srai>
        </template>
    </category>
<!-- look statement here -->
    <category>
    <pattern>INTERNALLOOK ROOM01</pattern>
        <template>
            <condition name="seen01" value="unseen">
                room01 - long description here - go east if you want to.
            </condition>

            <condition name="seen01" value="seen">
                room01 - short description here.
            </condition>

            <think><set name="seen01">seen</set></think>
        </template>

    </category>



<!-- ROOM02 -->

<!-- direction statements here -->
    <category>
        <pattern>
            GO WEST
        </pattern>
        <template>
            <think><set name="topic">ROOM01</set></think>
            <srai> INTERNALLOOK <get name="topic" /></srai>
        </template>
    </category>
<!-- look statement here -->
    <category>
    <pattern>INTERNALLOOK ROOM02</pattern>
        <template>
            <condition name="seen02" value="unseen">
                room02 - long description here - go west if you want to.
            </condition>

            <condition name="seen02" value="seen">
                room02 - short description here.
            </condition>

            <think><set name="seen02">seen</set></think>
        </template>

    </category>

<!-- simple look command -->
    <category>
        <pattern>
            LOOK
        </pattern>
        <template>
            <!-- one condition block for every room -->
            <condition name="topic" value="ROOM01">
                <think><set name="seen01">unseen</set></think>
            </condition>
            <condition name="topic" value="ROOM02">
                <think><set name="seen02">unseen</set></think>
            </condition>
            
            <srai> INTERNALLOOK <get name="topic" /></srai>
        </template>
    </category>


</aiml>